@model WhooberCore.Models.LoginModel

<form asp-action="Login" asp-controller="Auth" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone number</label>
            <input asp-for="PhoneNumber" class="form-control"/>
            <span asp-validation-for="PhoneNumber" class="text-danger"/>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password" class="text-danger"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Sign In" class="btn btn-primary"/>
        </div>
    </div>
</form>