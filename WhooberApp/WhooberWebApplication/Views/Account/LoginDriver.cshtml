@model WhooberCore.Models.LoginModel

<h2>Login driver</h2>
 
<a asp-action="RegisterDriver" asp-controller="Account">Registration</a>
 
<form asp-action="LoginDriver" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone number</label>
            <input type="text" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Enter" class="btn btn-outline-dark" />
        </div>
    </div>
</form>