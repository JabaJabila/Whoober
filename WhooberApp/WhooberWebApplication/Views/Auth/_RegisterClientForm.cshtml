@model WhooberCore.Models.RegisterModel

<form asp-action="RegisterClient" asp-controller="Auth" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Name">Name</label><br/>
            <input type="text" asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name"/>
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone number</label><br/>
            <input type="text" asp-for="PhoneNumber" class="form-control"/>
            <span asp-validation-for="PhoneNumber"/>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label><br/>
            <input asp-for="Password" class="form-control"/>
            <span asp-validation-for="Password"/>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Sign Up!</button>
        </div>
    </div>
</form>